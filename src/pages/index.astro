---
import Layout from "../layouts/Layout.astro";
// import Card from '../components/Card.astro';
import Experiencia from "@/components/Section/Experiencia.astro";
import About from "@/components/Section/About.astro";
import Hero from "@/components/Section/Hero.astro";
import Projectos from "@/components/Section/Projectos.astro";
import Skills from "@/components/Section/Skills.astro";
import Educacion from "@/components/Section/Educacion.astro";
import Certificaciones from "@/components/Section/Certificaciones.astro";
import Lenguaje from "@/components/Section/Lenguaje.astro";
import KeyBoardManager from "@/components/Keyboardmanager.astro";
---

<Layout title="NEO CV">
	<main>
		<Hero />
		<About />
		<Educacion />
		<Experiencia />
		<Skills />
		<Projectos />
		<Lenguaje/>
